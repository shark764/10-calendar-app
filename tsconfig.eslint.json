{
  // extend base config to share compilerOptions, etc
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // ensure that nobody can accidentally use this config for a build
    "noEmit": true,
    "allowJs": true
  },
  "include": [
    // paths we intend to lint
    "**/*",
    "src/**/*.ts",
    ".eslintrc.js",
    // Mixed JS/TS codebase,
    "src/**/*.js"
  ]
}
